
<div class="nav_path">PATH: <%= link_to 'ADMIN PANEL', admin_path, :class => 'links' %> >> <%= link_to 'CATEGORIES CONTROLLER', admin_categories_path, :class => 'links' %></div>
<div class="main_header">
    CATEGORIES CONTROLLER
</div>
<% @categories.each do |cat| %>
<div class="forum_tile">
    <%= link_to cat.title, boards_path, :class => 'board_title' %>
    <%= link_to "Edit", edit_admin_category_path(cat), :class => 'post_link', :method => :get  %>
    <%= link_to "Delete", admin_category_path(cat), :class => 'post_link', data: {confirm: "This action is irreversible and will delete the category and all boards and threads in this category. Are you sure this is what you want to do?"}, :method => :delete %>
    <Br>
    <p class='admin_desc'>Number of Boards:<%= cat.boards.count %></p>
</div>
<% end %>
<br>
<div class="forum_tile">
    <%= link_to "Create New Category", new_admin_category_path, :class => 'board_title' %>
</div>

